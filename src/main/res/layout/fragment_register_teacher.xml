<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="5"-->
<!--                    android:padding="17.5dp"-->
<!--                    app:srcCompat="@drawable/teacher_nickname" />-->

<!--                <EditText-->
<!--                    android:id="@+id/et_nickname_register_teacher"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
