            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3.5dp"
                android:paddingEnd="7.5dp">

                <ImageView
                    android:id="@+id/iv_des_register_academy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="17.5dp"
                    app:srcCompat="@drawable/teacher_introduction" />

                <EditText
                    android:id="@+id/et_des_register_academy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_layout_border"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint=" 한줄소개"
                    android:inputType="text"
                    android:paddingStart="7.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3.5dp"
                android:paddingEnd="7.5dp">

                <ImageView
                    android:id="@+id/iv_class_age_register_academy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="17.5dp"
                    app:srcCompat="@drawable/teacher_age" />

                <TextView
                    android:id="@+id/tv_class_age_register_academy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
