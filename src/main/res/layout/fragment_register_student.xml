<!--                <ImageView-->
<!--                    android:id="@+id/iv_nickname_register_student"-->
<!--                    app:srcCompat="@drawable/teacher_nickname"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="5"-->
<!--                    android:padding="17.5dp" />-->

<!--                <EditText-->
<!--                    android:id="@+id/et_nickname_register_student"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_margin="10dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:background="@drawable/custom_layout_border"-->
<!--                    android:ems="10"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:hint=" 닉네임"-->
<!--                    android:inputType="text"-->
<!--                    android:paddingStart="7.5dp" />-->
<!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3.5dp"
                android:paddingEnd="7.5dp">

                <ImageView
                    android:id="@+id/iv_des_register_student"
                    app:srcCompat="@drawable/teacher_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="17.5dp" />

                <EditText
                    android:id="@+id/et_des_register_student"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_layout_border"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint=" 한줄소개"
                    android:inputType="text"
                    android:paddingStart="7.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3.5dp"
                android:paddingEnd="7.5dp">

                <ImageView
                    android:id="@+id/iv_born_year_register_student"
                    app:srcCompat="@drawable/teacher_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="17.5dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_layout_border"
                    android:paddingStart="7.5dp">

                    <Spinner
                        android:id="@+id/spinner_born_year_register_student"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dialog" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3.5dp"
                android:paddingEnd="7.5dp">

                <ImageView
                    android:id="@+id/iv_gender_register_student"
                    app:srcCompat="@drawable/teacher_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="17.5dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_layout_border"
                    android:paddingStart="7.5dp">

                    <Spinner
                        android:id="@+id/spinner_gender_register_student"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dialog" />
                </FrameLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3.5dp"
                android:paddingEnd="7.5dp">

                <ImageView
                    android:id="@+id/iv_way_register_student"
                    app:srcCompat="@drawable/teacher_method"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:padding="17.5dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_layout_border"
                    android:paddingStart="7.5dp">

                    <Spinner
                        android:id="@+id/spinner_way_register_student"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:spinnerMode="dialog" />
                </FrameLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_space_register_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/btn_space_register_student2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/btn_next_register_student"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_button_theme"
                android:text="다음"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_space_register_student3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.25"
                android:background="@android:color/transparent" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>