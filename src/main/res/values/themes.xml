<resources>
    <!-- Base application theme. -->
    <style name="Theme.God_of_teaching" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name ="windowNoTitle">true</item>
<!--        &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <item name="android:fontFamily">@font/notosankr_medium</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>-->
<!--        &lt;!&ndash; If you're using AppCompat then it should be like this: &ndash;&gt;-->
<!--        <item name="actionBarStyle">@style/MyActionBarStyle</item>-->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.God_of_teaching.Splash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/auth_intro</item>
        <item name="postSplashScreenTheme">@style/Theme.God_of_teaching</item>

    </style>
    <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:titleTextColor">@color/theme_color</item>
    </style>

</resources>
